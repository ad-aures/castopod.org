---
// Component Imports
import Features from "organisms:Features";
import Footer from "organisms:Footer";
import Sponsors from "organisms:Sponsors";
import Community from "organisms:Community";
import OpenSource from "organisms:OpenSource";
import Header from "organisms:Header";
import BrowserPreview from "organisms:BrowserPreview";
import { SEO } from "astro-seo";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <SEO
      title="Castopod by Ad Aures | Your Free & Open-source Podcast Host"
      description="Castopod is a free and open-source hosting platform made for podcasters. Engage and interact with your audience whilst keeping control over your content."
      canonical="https://castopod.org/"
      openGraph={{
        basic: {
          title: "Castopod | Your Free & Open-source Podcast Host",
          description:
            "Castopod is a free and open-source hosting platform made for podcasters. Engage and interact with your audience whilst keeping control over your content.",
          type: "website",
          image: "https://castopod.org/assets/images/open-graph.jpg",
          url: "https://castopod.org/",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@castopod",
        creator: "@ad_aures",
      }}
      extend={{
        meta: [
          {
            name: "og:image:type",
            content: "image/jpeg",
          },
          {
            name: "og:image:width",
            content: 1200,
          },
          {
            name: "og:image:height",
            content: 630,
          },
          {
            name: "og:image:alt",
            content:
              "Castopod mascot waving hello and hoding a browser showcasing Castopod.",
          },
        ],
      }}
    />
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/index.css")}
    />
    <script
      defer
      data-domain="castopod.org"
      src="https://analytics.castopod.org/js/plausible.js"></script>
  </head>

  <body class="overflow-x-hidden">
    <Header />
    <main>
      <BrowserPreview />
      <Features />
      <OpenSource />
      <Community />
      <Sponsors />
    </main>
    <Footer />
  </body>
</html>
