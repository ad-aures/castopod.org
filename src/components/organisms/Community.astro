---
import { Icon } from "astro-icon/components";
import { t } from "i18next";
---

<section
  id="community"
  class="max-w-5xl px-12 py-20 mx-auto -mt-40 text-center shadow-2xl text-pine-100 bg-pine-800 rounded-conditional-3xl"
>
  <div class="max-w-2xl mx-auto">
    <h2 class="text-4xl font-bold font-display">{t("community.title")}</h2>
    <p class="mt-8 text-xl">
      {t("community.vision")}
    </p>
    <p class="mt-4 text-xl">
      {t("community.join")}
    </p>
    <div class="flex items-center justify-center mt-8 gap-x-8">
      <a
        href="https://podlibre.social/@Castopod"
        class="hover:text-white"
        title={t("common:followOnFediverse")}
        rel="me"
        ><Icon name="ri:mastodon-fill" class="text-4xl" />
      </a>
      <a
        href="https://twitter.com/castopod"
        class="hover:text-white"
        title={t("common:followOnTwitter")}
        ><Icon name="ri:twitter-x-fill" class="text-4xl" />
      </a>
      <a
        href="https://castopod.org/discord"
        class="hover:text-white"
        title={t("common:joinDiscord")}
        ><Icon name="ri:discord-fill" class="text-4xl" />
      </a>
    </div>
  </div>
</section>
