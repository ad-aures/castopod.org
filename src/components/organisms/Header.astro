---
import PinnedArticleBanner from "molecules:PinnedArticleBanner";
import CastopodMascot from "assets:CastopodMascot";
import MainNav from "organisms:MainNav";
import { Icon } from "astro-icon";
import i18next, { t } from "i18next";
---

<header id="jumbotron" class="text-pine-100 bg-pine-800">
  <MainNav />
  <hr class="container border-pine-500" />
  <PinnedArticleBanner
    className="mt-8 max-w-xl mx-auto"
    href="https://blog.castopod.org/castopod-v1"
  >
    ðŸŽ‰ <strong>v1.0 is officially out!</strong> New roles, automatic database updates
    and more about future developments!
  </PinnedArticleBanner>

  <div
    class="container flex items-center justify-center px-4 pt-12 pb-56 md:px-0 md:justify-between"
  >
    <div
      class="flex flex-col items-center max-w-xl text-center md:items-start md:text-left"
    >
      <h1 class="text-3xl font-bold md:text-5xl font-display">
        {t("header.displayTitle")}
      </h1>
      <p class="mt-4">
        {t("header.description")}
      </p>
      <div
        class="flex flex-wrap items-start justify-center mt-6 gap-x-4 gap-y-4"
      >
        <a
          href={import.meta.env.PUBLIC_CASTOPOD_PACKAGE_URL}
          class="inline-flex items-center px-4 py-2 font-semibold bg-white border-2 border-transparent rounded-full shadow-md text-pine-900 gap-x-2 hover:bg-pine-50 focus:outline-none focus:ring-2 focus:ring-pine-400 focus:ring-opacity-75"
          download
          data-analytics={'"Download", ' +
            JSON.stringify({
              props: {
                via: "Main CTA",
                version: import.meta.env.PUBLIC_CASTOPOD_VERSION,
              },
            })}
        >
          <Icon
            pack="ri"
            name="download-cloud-2-fill"
            class="h-6 text-pine-500"
          />
          {t("common:downloadCastopod")}
        </a>
        <a
          href={i18next.language === "en"
            ? "https://docs.castopod.org/"
            : `https://docs.castopod.org/${i18next.language}`}
          class="inline-flex items-center px-4 py-2 font-semibold border-2 rounded-full border-pine-300 text-pine-100 gap-x-2 bg-pine-800 hover:bg-pine-900 focus:outline-none focus:ring-2 focus:ring-pine-400 focus:ring-opacity-75"
          data-analytics={'"Documentation", ' +
            JSON.stringify({ props: { via: "Main CTA" } })}
        >
          {t("common:getStarted")}
          <Icon pack="ri" name="arrow-right-line" class="h-6 text-pine-300" />
        </a>
      </div>
    </div>
    <CastopodMascot className="h-80 hidden md:block" />
  </div>
</header>
