---
let { type = "button", className = "" } = Astro.props;

const btnClass = `${className} inline-flex items-center px-4 py-2 font-semibold text-white rounded-full shadow-md gap-x-2 bg-pine-500 hover:bg-pine-800 focus:outline-none focus:ring-2 focus:ring-pine-400 focus:ring-opacity-75`;
---

<button class={btnClass} {type}>
  <slot></slot>
</button>
